<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <!-- <link rel='stylesheet' media="only screen and (min-device-width : 1200px)" href='/stylesheets/style.css' /> -->
        <!-- <link rel="stylesheet" media="only screen and (min-device-width : 768px) and (max-device-width : 1024px)" href="/stylesheets/ipad.css" /><!-- ipad styling -->
        <!-- favicon -->
        <link rel="shortcut icon" type="image/png" href="images/favicon.ico">
        <script src="/socket.io/socket.io.js"></script>
        <script src="js/jquery-1.9.1.min.js"></script>
        <!-- backbone.js-->
        <script src="js/underscore.js"></script>
        <script src="js/backbone.js"></script>
        <!-- GSAP -->
        <script src="js/CSSPlugin.min.js"></script>
        <script src="js/TweenLite.min.js"></script>

        <script src="js/index.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
        <meta name="apple-mobile-web-app-capable" content="yes" />
    </head>
    <body>
        <div id="maincontainer">
            <header>
                <div id="infoButtonWrapper">
                    <img src="images/info.png">
                </div>
                <div id="logoWrapper">
                    <img id="logo" src="images/sultagit_logo.png">
                </div>
                <div id="secretControls">
                    <input id="stopSubscriptions"type="button" value="stop sub"></br>
                    <input id="speedSelector" type="range" min="0.5" max="15" step="0.5" value="5"><span>5</span> sec.
                </div>
            </header>
            <div id="searchWrapper">
                <div id="searchForm">
                    <input type="text" id="searchbox" placeholder="enter sentence (english only)" />
                    <input type="button" id="submitButton" name="go" value="Go">
                </div>
            </div>
            <div id="result">
                <div id="resultTitles"></div>
                <div id="resultImages"></div>
            </div>
        </div>
    </body>
</html>